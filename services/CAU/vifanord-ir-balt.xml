<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../xsl/doc/pazpar2-docs.xsl"?>
<service
	xmlns="http://www.indexdata.com/pazpar2/1.0"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	id="vifanord-ir-balt">
<!--
	Targets for vifanord internet resource search, Baltic region.

	2014: Sven-S. Porst <ssp-web@earthlingsoft.net>
-->

	<settings src="settings/vifanord-general.xml"/>
	
	<settings src="settings/vifanord-zsql.xml"/>
	<settings>
		<set name="pz:allow" target="vifanord-zsql/irall-balt" value="1"/>
	</settings>
	
	<settings src="settings/gbv-sru.xml"/>
	<settings src="settings/vifanord-gbv.xml"/>
	<settings>
		<set target="sru.gbv.de/fachopac-vifanord-balt" name="pz:allow" value="1"/>
		<!-- Use pqf_strftime to add MAK O* to query a pqf_prefix is already used for limiting. -->
		<set target="sru.gbv.de/fachopac-vifanord-balt" name="pz:pqf_strftime"
			value="@and %% @attr 5=1 @attr 1=pica.mak O"/>
	</settings>
	
	<settings src="settings/swb.xml"/>
	<settings src="settings/vifanord-swb.xml"/>
	<settings target="swb/wao-vifanord-balt">
		<set name="pz:allow" value="1"/>
		<!-- Use pqf_strftime to add MAT O to query a pqf_prefix is already used for region limiting. -->
		<set name="pz:pqf_strftime" value="@and %% @attr 1=1031 O"/>
	</settings>



	<xi:include href="../metadata/vifanord-extras.xml"/>
	<xi:include href="../metadata/default.xml"/>

</service>
